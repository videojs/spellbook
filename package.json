{
  "name": "videojs-spellbook",
  "version": "0.0.0",
  "description": "A collection of tools to aid in the development of video.js plugins.",
  "main": "reagents.js",
  "bin": {
    "cast": "./cli.js"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "babel -q src -d . && node -e \"require('shelljs').chmod(755, './cli.js');\"",
    "clean": "node -e \"require('shelljs').rm('-rf', ['tmp', 'lib', 'reagents', 'spells', 'test', 'cli.js', 'reagents.js']);\"",
    "lint": "vjsstandard",
    "pretest": "npm run lint && npm run build",
    "test": "tap test/**/*.test.js",
    "preversion": "npm test",
    "prepublish": "npm run build"
  },
  "vjsstandard": {
    "ignore": [
      "tmp"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/videojs/spellbook.git"
  },
  "keywords": [
    "videojs",
    "spellbook",
    "cast",
    "tools",
    "tooling",
    "automation"
  ],
  "author": "Brightcove, Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/videojs/spellbook/issues"
  },
  "homepage": "https://github.com/videojs/spellbook#readme",
  "devDependencies": {
    "shelljs": "^0.5.3",
    "tap": "^5.0.1"
  },
  "dependencies": {
    "babel": "^5.8.34",
    "babel-polyfill": "^6.3.14",
    "babelify": "^6.4.0",
    "bannerize": "^1.0.2",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "fs-extra": "^0.26.4",
    "glob": "^6.0.4",
    "minimist": "^1.2.0",
    "node-sass": "^3.4.2",
    "tsts": "^1.0.1",
    "uglify-js": "^2.6.1",
    "videojs-languages": "^1.0.0",
    "videojs-standard": "^4.0.0"
  }
}
