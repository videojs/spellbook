{
  "name": "videojs-spellbook",
  "version": "0.0.0",
  "description": "A collection of tools to aid in the development of video.js plugins.",
  "main": "reagents.js",
  "bin": {
    "cast": "./cli.js"
  },
  "scripts": {
    "build": "babel -q src -d . && node -e \"require('shelljs').chmod(755, './cli.js');\"",
    "lint": "vjsstandard",
    "pretest": "npm run lint && npm run build",
    "test": "tap test/**/*.test.js",
    "preversion": "npm test",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/videojs/spellbook.git"
  },
  "keywords": [
    "videojs",
    "spellbook",
    "cast",
    "tools",
    "tooling",
    "automation"
  ],
  "author": "Brightcove, Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/videojs/spellbook/issues"
  },
  "homepage": "https://github.com/videojs/spellbook#readme",
  "devDependencies": {
    "tap": "^5.0.1"
  },
  "dependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.0",
    "babel-plugin-add-module-exports": "^0.1.3-alpha",
    "babel-preset-es2015": "^6.3.13",
    "minimist": "^1.2.0",
    "shelljs": "^0.5.3",
    "tsts": "^1.0.1",
    "videojs-standard": "^4.0.0"
  }
}
